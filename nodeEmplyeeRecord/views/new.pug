extends layout

block content
  h2 Add New Employee
  form(action="/create", method="POST")
    label E_ID:
    input(type="number", name="E_ID", required)
    br
    label E_NAME:
    input(type="text", name="E_NAME", required)
    br
    label E_EMAIL:
    input(type="email", name="E_EMAIL", required)
    br
    label E_PHONE:
    input(type="number", name="E_PHONE", required)
    br
    label E_GENDER:
    select(name="E_GENDER", required)
      option(value="Male") Male
      option(value="Female") Female
    br
    label E_DEPT:
    input(type="text", name="E_DEPT", required)
    br
    label E_LOCATION:
    input(type="text", name="E_LOCATION", required)
    br
    button(type="submit") Add
